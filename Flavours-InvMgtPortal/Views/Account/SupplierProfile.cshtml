                <li class="nav-item">
                    <a class="nav-link" id="companyProductsNavLink" name="Product Information Form" data-bs-toggle="tab" href="#companyProductInfoHref" role="tab"
                       aria-controls="companyProductInfoHref" aria-selected="false">Product Details</a>
                </li>
            </ul> @*end of ul class="nav nav-tabs"*@

            <div class="card-body border border-0">
                <div class="card-title" id="cardTitle">Company Profile</div>
                <div class="tab-content" id="companyInfoTabContent">

                    <div class="tab-pane fade show active" id="companyInfoHref" role="tabpanel" aria-labelledby="companyInfoNavLink">
                        <form id="companyProfileForm">
                            <div class="row">

                                <div class="col-12 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="businessName" id="businessName" placeholder="" required>
                                        <label for="businessName" class="form-label">Business Name <span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-12 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="businessOwnerName" id="businessOwnerName" placeholder="">
                                        <label for="businessOwnerName" class="form-label">Business Owner Name<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-12 text-start">
                                    <div class="form-floating">

                                        <input type="text" class="form-control" name="businessregistrationNo" id="businessregistrationNo" placeholder="" required>
                                        <label for="businessregistration" class="form-label">Business Registration #<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <select class="form-select form-select-sm ps-2" aria-label=".form-select-sm">
                                            <option value="0" selected>Retail</option>
                                            <option value="1">Wholesale</option>
                                            <option value="2">Manufacturing</option>
                                            <option value="3">Distribution</option>
                                        </select>
                                        <label for="businessType" class="form-label ps-2">Select business type<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="email" class="form-control" name="tinNo" id="tinNo" placeholder="" required>
                                        <label for="tinNo" class="form-label">Enter TIN #<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-12 text-start">
                                    <div class="form-floating">
                                        <textarea type="email" style="width:32.20rem; height:7rem;" cols="300" rows="150" class="form-control" name="companyDescription" id="companyDescription" placeholder="" required></textarea>
                                        <label for="companyDescription" class="form-label">Company Description: Tell us  more about your company<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                            </div>
                        </form> @*end of form id="companyProfileForm"*@
                    </div> @*div class="tab-pane fade show active" - Company Profile Form*@

                    <div class="tab-pane fade" id="companyAddressInfoHref" role="tabpanel" aria-labelledby="companyAddressNavLink">
                        <form id="companyAddressForm">
                            <div class="row">
                                @*<h3>Communication Address</h3>*@
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="buildingNameOrNo" id="buildingNameOrNo" placeholder="" required>
                                        <label for="buildingNameOrNo" class="form-label">Building Name / #<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="buildingPlaceorLocation" id="buildingPlaceorLocation" placeholder="" required>
                                        <label for="buildingPlaceorLocation" class="form-label">Place or Location<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="buildingStreetName" id="buildingStreetName" placeholder="" required>
                                        <label for="buildingStreetName" class="form-label">Street Name<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="buildingCityName" id="buildingCityName" placeholder="" required>
                                        <label for="buildingCityName" class="form-label">Name of City<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="buildingDistrictName" id="buildingDistrictName" placeholder="" required>
                                        <label for="buildingDistrictName" class="form-label">Name of District<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="buildingPostalCode" id="buildingPostalCode" placeholder="" required>
                                        <label for="buildingPostalCode" class="form-label">Postalcode (Pin Code)<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-floating">
                                        <select class="form-select form-select-sm ps-2" aria-label=".form-select-sm example">
                                            <option value="0" selected>Kerala</option>
                                            <option value="1">Other</option>
                                        </select>
                                        <label for="country" class="form-label ps-2">Select State Name<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-floating">
                                        <select class="form-select form-select-sm ps-2" aria-label=".form-select-sm example">
                                            <option value="0" selected>India</option>
                                            <option value="1">Other</option>
                                        </select>
                                        <label for="country" class="form-label ps-2">Select Country<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                            </div>
                        </form> @*end of form id="companyAddressForm"*@
                    </div> @*div class="tab-pane fade for address section"  - Company Address Details Form*@

                    <div class="tab-pane fade" id="companyContactInfoHref" role="tabpanel" aria-labelledby="companyContactNavLink">
                        <form id="companyContactsForm">
                            <div class="row">
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="businessPhoneOne" id="businessPhoneOne" placeholder="" required>
                                        <label for="businessPhoneOne" class="form-label">Enter phone #<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="businessPhoneTwo" id="businessPhoneTwo" placeholder="" required>
                                        <label for="businessPhoneTwo" class="form-label">Additional contact #<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="businessEmailId" id="businessEmailId" placeholder="" required>
                                        <label for="businessEmailId" class="form-label">Enter official email Id<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="businessWebsiteURL" id="businessWebsiteURL" placeholder="" required>
                                        <label for="businessWebsiteURL" class="form-label">Enter site URL<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div> @*end of div class="tab-pane fade for contact session  - Company Contact Details Form*@

                    <div class="tab-pane fade" id="companyProductInfoHref" role="tabpanel" aria-labelledby="companyProductsNavLink">
                        <form id="companyProductsForm">
                            <div class="row">
                                <div class="col-12 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="productName" id="productName" placeholder="" required>
                                        <label for="productName" class="form-label">Product name <span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <select class="form-select form-select-sm ps-2" aria-label=".form-select-sm">
                                            <option value="0" selected>Category 1</option>
                                            <option value="1">Category 2</option>
                                            <option value="2">Category 3</option>
                                            <option value="3">Category 4</option>
                                        </select>
                                        <label for="productCategory" class="form-label ps-2">Select product category<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-6 text-start">
                                    <div class="form-floating">
                                        <select class="form-select form-select-sm ps-2" aria-label=".form-select-sm">
                                            <option value="0" selected>Product Type 1</option>
                                            <option value="1">Product Typ 2</option>
                                            <option value="2">Product Typ 3</option>
                                            <option value="3">Product Typ 4</option>
                                        </select>
                                        <label for="productTypes" class="form-label ps-2">Select product type<span class="text-danger">*</span></label>
                                    </div>
                                </div>
