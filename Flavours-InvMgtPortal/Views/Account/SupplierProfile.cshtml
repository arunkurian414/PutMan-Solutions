                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="productBasePrice" id="productBasePrice" placeholder="">
                                        <label for="productBasePrice" class="form-label">Base price<span class="text-danger">*</span></label>
                                    </div>
                                </div>
                                <div class="col-4 text-start">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="productTaxPercent" id="productTaxPercent" placeholder="" required>
                                        <label for="productTaxPercent" class="form-label">Tax percentage<span class="text-danger">*</span></label>
                                    </div>
                                </div>
