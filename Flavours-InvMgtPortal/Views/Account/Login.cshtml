@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <h2 class="text-center mt-4">User Login</h2>
                <div class="card-body">
                    <form id="registrationForm" method="post">
                        <div class="form-group">
                            <input asp-for="Email" class="form-control pb-3" placeholder="Email" />
                            <span asp-validation-for="Email" class="form-control mb-4" />
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control pb-3" placeholder="Password" />
                            <span asp-validation-for="Password" class="form-control mb-4" />
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn-primary mt-4">Login</button>
                    </form>
                    <p class="mt-3">
                        Not registered?
                        <a asp-action="register" asp-controller="account">
                            Create an
                            account
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>