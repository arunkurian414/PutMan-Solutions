@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "List Users";
}

<h1>Get All Users</h1>
@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Register" asp-controller="Account">Add New Role</a>
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">User ID: @user.Id</div>
            <div class="card-body">
                <h5 class="card-title">User Name: @user.UserName</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditUser" asp-controller="Account" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                <a asp-action="DeleteUser" asp-controller="Account" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-action="ListRole" asp-controller="Administration">
                Create Role
            </a>
        </div>
    </div>
}