@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <h2 class="text-center mt-4">User Registration</h2>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="form-control mb-3" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="form-control mb-3" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="form-control mb-3" />
                        </div>
                        <div class="form-group">
                            <label asp-for="UserIdNumber"></label>
                            <input asp-for="UserIdNumber" class="form-control mb-3" />
                        </div>
                        <div class="form-group">
                            <label asp-for="UserIdType"></label>
                            <input asp-for="UserIdType" class="form-control mb-3" />
                        </div>
                        <button type="submit" class="btn-primary mt-4">Register</button>
                        <p class="mt-3">
                            Already Registered?
                            <a asp-action="login" asp-controller="account">
                                Click here to login
                            </a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}